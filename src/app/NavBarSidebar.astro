import { asset } from '../lib/data.js';

import ColorModeSwitcher from '../components/ColorModeSwitcher.astro';
import GitHubButton from '../components/GitHubButton.astro';
import SearchInput from '../components/SearchInput.astro';


---

<nav
	class="fixed z-10 w-full bg-[#f9fafb] bg-opacity-30 backdrop-filter backdrop-blur-md  dark:bg-gray-800 dark:border-gray-700 dark:shadow-sm-light"
>
	<div class="px-3 py-3 lg:px-5 lg:pl-3">
		<div class="flex items-center justify-between">
			<div class="flex items-center justify-start">
				<button
					id="toggleSidebarMobile"
					aria-expanded="true"
					aria-controls="sidebar"
					class="p-2 text-gray-600 rounded cursor-pointer lg:hidden hover:text-gray-900 hover:bg-gray-100 focus:bg-gray-100 dark:focus:bg-gray-700 focus:ring-2 focus:ring-gray-100 dark:focus:ring-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
				>
					<svg
						id="toggleSidebarMobileHamburger"
						class="w-6 h-6"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
						><path
							fill-rule="evenodd"
							d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h6a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
							clip-rule="evenodd"></path></svg
					>
					<svg
						id="toggleSidebarMobileClose"
						class="hidden w-6 h-6"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
						><path
							fill-rule="evenodd"
							d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
							clip-rule="evenodd"></path></svg
					>
				</button>


				<!-- <SearchInput /> -->
			</div>

			
			<div class="flex items-center">


				<ColorModeSwitcher />

			
			</div>
		</div>
	</div>
</nav>

<script>
import logo_oscuro from "../assets/logoPrefectura.png"
import logo_blanco from "../assets/logoPrefectura_blanco.png"

let logo = document.getElementById('logo');
// Define las rutas de tus imágenes

// Obtén el elemento de la imagen
function cambiarLogo() {
  if (document.documentElement.classList.contains('dark')) {
    logo.src = logo_blanco.src;
  } else {
    logo.src = logo_oscuro.src;
  }
}

// Cambia el logo al cargar la página
cambiarLogo();

// Cambia el logo cuando el tema cambie
let observer = new MutationObserver(cambiarLogo);
observer.observe(document.documentElement, { attributes: true });
</script>